<% layout('layout/boilerplate') %>
<div class="container justify-content-center align-items-center col-11  shadow mb-5 bg-white rounded col-md-6 offset-md-3 col-xl-4 offset-xl-4" >
    
    <img src="images/profile.jpeg" style="max-width: 100%;">
    <div class="card-body text-center">
        <ul class="list-group list-group-flush card-text">
        <li class="list-group-item text-center"><h1 class="mt-3">Profile</h1></li>
            <li class="list-group-item">Username: <%= user.username %></li>
            <li class="list-group-item">Email: <%= user.email %></li>
            <% if(user.phoneNumber){ %>
            <li class="list-group-item">Phone Numeber: <%= user.phoneNumber %> </li>
            <% } %>
            <li class="list-group-item"><a href="/activeOrders">Active Orders</a></li>
            <li class="list-group-item"><a href="/userHistory">My Order History</a></li>
            <a href="/profile/edit">
            <br>
            <button class="btn btn-success">Edit Profile</button></a>
        </ul>
    </div>
</div>
</div>
