<html>
<head>

<link rel="stylesheet" href="../stylesheet/login.css">

 <link href="https://fonts.googleapis.com/css2?family=Poppins&display=swap" rel="stylesheet">
 <script src="/javascripts/formvalidation.js"></script>
 <title>Login</title>
<meta name="viewport" content="width=device-width, initial-scale=1">
<body>
  <div class="login-box">
    <% if(success && success.length){ %> 
      <div class="alert alert-success alert-dismissible fade show mt-3 row" role="alert">
          <strong><%= success %> </strong>
          <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
      </div>
      <% } %> 
      
      <% if(error && error.length){ %> 
      <div class=" alert alert-danger alert-dismissible fade show mt-3 row" role="alert">
          <strong><%= error %> </strong>
          <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
      </div>
      <% } %> 
    <form class="screen-1" action="/login" method="post" novalidate class="validation">
    <a href="/"><img src="../images/velos_logo-removebg.png" class="logo"></a>
      <div class="email">
      <label for="username">Username</label>
      <div class="sec-2">
          <i class="fa fa-user"></i>
        <input type="text" name="username" placeholder="Username" required/>
      </div>
    </div>
    <div class="password">
      <label for="password">Password</label>
      <div class="sec-2">
        <i class="fa fa-lock"></i>
        <input class="pas" type="password" name="password" placeholder="············" required/>
      </div>
    </div>
    <button class="login">Login</button>
    <a href="/auth/google"><button class="login btn btn-primary" style="background-color: #dd4b39;" type="button" role="button">
              <i class="fa fa-google"></i>  Sign in with google</button></a>
    <div class="footer"><a href="/signup"><span class="sign-up">Sign up</span></a><span>Forgot Password?</span></div>
  
    </form>
  </div>
</body>

